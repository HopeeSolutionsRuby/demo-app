<div class="d-flex justify-content-between align-items-center">
  <h4 class="fw-bolder">Detail Page</h4>
  <div>
    <%= link_to new_admins_jobcategory_path, class: 'btn btn-primary', data: { turbo_frame: 'container-frame', turbo_action: 'replace' } do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
    <%= link_to admins_jobcategories_path, class: "btn btn-secondary", data: { turbo_frame: 'container-frame', turbo_action: 'replace' } do %>
      <i class="fa-solid fa-list-ul"></i>
    <% end %>
  </div>
</div>

<div class="container text-center"> <!-- Corrected "text-centre" to "text-center" -->
  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Job Category Details</h5> <!-- Corrected "Job Categories Details" to "Job Category Details" -->
        </div>
        <div class="card-body position-relative">
          <%= link_to edit_admins_jobcategory_path(@jobcategory), class: 'btn btn-primary position-absolute top-0 end-0 m-2', style: 'z-index: 1;', data: { turbo_frame: 'container-frame', turbo_action: 'replace' } do %>
            <i class="fa-solid fa-pen"></i>
          <% end %>
          <div class="card-body"> <!-- Removed duplicate "card-body" -->
            <br>
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th scope="row">Country</th>
                  <td><%= @jobcategory.country %></td>
                </tr>
                <tr>
                  <th scope="row">Category Name</th> <!-- Corrected "Job_id" to "Category Name" -->
                  <td><%= @jobcategory.category_name %></td>
                </tr>
                <tr>
                  <th scope="row">Job Category Status</th> <!-- Corrected "Job_category_id" to "Job Category Status" -->
                  <td><%= @jobcategory.job_category_status %></td>
                </tr>
                <tr>
                  <th scope="row">Description</th>
                  <td><%= @jobcategory.description %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
