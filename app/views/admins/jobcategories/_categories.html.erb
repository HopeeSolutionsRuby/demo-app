<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@jobcategory, :id, "#", class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@jobcategory, :country, "Country", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@jobcategory, :job_category_id, "Job Category ID", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@jobcategory, :job_id, "Job ID", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@jobcategory, :description, "Description", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
    </tr>
  </thead>
  <tbody id="job-category-table-body">
    <% if @jobcategories.size.zero? %>
      <tr><td colspan="10">No data</td></tr>
    <% else %>
      <%= render partial: 'table_line', collection: @jobcategories, as: :jobcategories %>
    <% end %>
  </tbody>
</table>
