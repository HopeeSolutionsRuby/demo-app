<div class="container text-centre">
  <div class="row align-items-start">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Employee Details</h5>
        </div>
        <div class="card-body">
          <div class="text-center mb-3">
            <div class="card text-left" style="max-width: 13.5rem; max-height: 14rem; margin: 0 auto;">
              <img class="card-img-top" src="<%= @employee.account.avatar %>" alt="Avatar">
              <div class="card-body">
                <h6 class="card-title text-center">Avatar</h6>
              </div>
            </div>
          </div>
          <br>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th scope="row">First Name</th>
                <td><%= @employee.first_name %></td>
              </tr>
              <tr>
                <th scope="row">Last Name</th>
                <td><%= @employee.last_name %></td>
              </tr>
              <tr>
                <th scope="row">Gender</th>
                <td><%= @employee.gender %></td>
              </tr>
              <tr>
                <th scope="row">Email</th>
                <td><%= @employee.account.email %></td>
              </tr>
              <tr>
                <th scope="row">Address</th>
                <td><%= @employee.address %></td>
              </tr>
              <tr>
                <th scope="row">Phone Number</th>
                <td><%= @employee.account.phone %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
