<tr>
  <th scope="row"><%= employer.id %></th>
  <td><%= link_to employer.name, admins_employer_path(employer), class: 'text-decoration-none', data: { turbo_frame: 'container-frame', turbo_action: 'replace' } %></td>
  <td><%= employer.address %></td>
  <td><%= employer.company_size %></td>
  <td><%= employer.website %></td>
  <td><%= link_to 'Edit', edit_admins_employer_path(employer), class: 'btn btn-light', data: { turbo_frame: 'container-frame', turbo_action: 'replace' } %></td>
  <td><%= button_to 'Destroy', admins_employer_path(employer), class: 'btn btn-danger', method: 'delete', data: { turbo_frame: 'container-frame', turbo_action: 'replace', turbo_confirm: 'Are you sure?' } %></td>
</tr>
