<h1>account info</h1>

<div>
    <%= "email:"+  @account.email %>
    <br>
    <%= "password:" + @account.encrypted_password %>
    <br>
    <%= "phone:" + @account.phone %>
    <br>
    <%= "role:" + @account.role %>
    <br>
    <td><%= link_to 'Edit', edit_admins_account_path(@account), class: 'btn btn-outline-primary'%></td>
    <td><%= button_to 'Destroy', admins_account_path(@account), class: 'btn btn-danger',method: 'delete'%></td>
    <td><%= button_to 'Back to Accounts List', admins_accounts_path, class: 'btn btn-secondary',method: 'get'%></td>
</div>
