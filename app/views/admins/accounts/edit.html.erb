<div class="container mx-auto px-5 py-5 shadow-lg text-center" style="width: calc(6em * 6);">
  <h2>Edit account</h2>
  <%= render "devise/shared/error_messages", resource: @account %>
  <%= form_for @account, url: admins_account_path(@account) do |form| %>
    <div class="row my-4 mx-5">
      <%= form.label :email, class:"form-label text-dark" %>
      <%= form.text_field :email, class:"form-control border-3 bg-secondary-subtle text-center py-2", placeholder: "Email", :disabled => true %>
    </div>
    <div class="row mb-4 mx-5">  
      <%= form.label :phone, class:"form-label text-dark" %>
      <%= form.text_field :phone, class:"form-control border-3 bg-light text-center py-2", placeholder: "Phone Number", value: @account.phone %>
    </div>
    <div class="row mx-5">
      <%= form.label :avatar, for:"formFileLg", class:"form-label text-dark" %>
      <%= form.file_field :avatar, class:"form-control border-3", id:"formFileSm" %>
    </div>
    <div class="d-grid col-4 mx-auto mb-4 pt-5">
      <%= form.submit class: "btn btn-primary btn-lg rounded-3 py-2" %>
    </div>
  <% end %>
</div>
