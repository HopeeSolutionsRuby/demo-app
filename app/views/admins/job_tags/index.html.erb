<br>
<h1>Listing Jobs</h1>
<%= render partial: 'shared/flash'%>
<table class="table  table-striped">
  <thead>
    <tr>
      <th>Job Tag</th>
      <th>Country</th>
      <th>Job Category ID</th>
      <th>Job Description</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @job_tags.each do |job_tag|%>
      <tr>
        <td><%= job_tag.job_id %></td>
        <td><%= job_tag.country %></td>
        <td><%= job_tag.job_category_id%></td>
        <td><%= job_tag.description%></td>
        <td>
       <!--    <div class="d-grid gap-2 col-4">
              <%= link_to 'Edit', edit_admins_job_tag_path(job_tag), class: 'btn btn-primary' %>
          </div> -->
            <div class="d-grid gap-2 col-4" >
              <%= link_to 'Show', admins_job_tag_path(job_tag), class: 'btn btn-info' %>
          </div>
            <div class="d-grid gap-2 col-4" >
              <%= button_to 'Delete', admins_job_tag_path(job_tag), method: :delete, class: 'btn btn-danger', remote: true %>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

