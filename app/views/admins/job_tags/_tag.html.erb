<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@job_tag, :id, "#", class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@job_tag, :country, "Country", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@job_tag, :job_category_id, "Job Category ID", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@job_tag, :job_id, "Job ID", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
      <th scope="col"><%= sort_link(@job_tag, :description, "Description", default_order: :desc, class: 'text-dark text-decoration-none') %></th>
    </tr>
  </thead>
  <tbody id="job-tag-table-body">
    <% if @job_tags.size.zero? %>
      <tr><td colspan="10">No data</td></tr>
    <% else %>
      <%= render partial: 'tag_line', collection: @job_tags, as: :job_tags %>
    <% end %>
  </tbody>
</table>
