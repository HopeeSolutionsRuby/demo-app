<% if flash.key?(:alert) %>
  <div class="toast align-items-center text-white bg-danger border-0 position-absolute top-0 end-0 toast-animation" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
    <button type="button" class="btn-close btn-close-white me-2 m-auto end-0 position-absolute" data-bs-dismiss="toast" aria-label="Close"></button>
    <div class="toast-body">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>
