<div class='container py-5 h-100'>
  <div class="row d-flex justify-content-center align-items-center h-100">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="field form-outline mb-3">
        <%= f.label :email , class: "form-label d-flex justify-content-start"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-3">
        <%= f.label :full_name, class: "form-label d-flex justify-content-start" %>
        <%= f.text_field :full_name, autocomplete: "fullname", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-3">
        <%= f.label :address, class: "form-label d-flex justify-content-start" %>
        <%= f.text_field :address, autocomplete: "address", class: "form-control form-control-lg" %>
      </div>

      <div  class='col d-flex align-items-center justify-content-start mb-3'>
        <div class="field col-4 ">
          <%= f.label :phone %>
          <%= f.text_field :phone, autocomplete: "phone", class: "form-control form-control-lg" %>
        </div>

        <div class="field col-2 px-4">
          <%= f.label :age %>
          <%= f.number_field :age, autocomplete: "age", class: "form-control form-control-lg" %>
        </div>

        <div class='field col-2 ' >
          <%= f.label "Sex :" %> <br/>
          <div class='py-2'>
            <%= f.radio_button(:sex, "male") %>
            <%= label_tag(:sex_male,   "Male") %>
            <%= f.radio_button(:sex, "female") %>
            <%= label_tag(:sex_female, "Female") %>
          </div> 
        </div>

        <div class="field col-4 ">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, autocomplete: "avatar", class: "form-control form-control-lg" %>
        </div>
      </div>
 
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-outline mb-3">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
        <% if @minimum_password_length %>
          <em style= "color: red"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field form-outline mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
      </div>

      <div class="field form-outline mb-3">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg" %>
      </div>

      <div class='d-flex justify-content-between'>
        <div class="actions mb-5 ">
          <%= f.submit "Update", class: 'btn ', style:"background: linear-gradient(120deg, #3498db, #8e44ad, #3498db); color: white" %>
        </div>
    
        <div class='mb-3 '>
          <%= button_to "Cancel my account" , registration_path(resource_name),class: "btn btn-danger mb-3", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        </div>       
      </div>
    <% end %>

    <%= link_to "Back", :back , class: 'btn btn-primary w-25 '%>

  </div>
</div>

<%= stylesheet_link_tag 'form_edit'%>
