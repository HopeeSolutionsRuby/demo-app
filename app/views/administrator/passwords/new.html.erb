<section class="container-fluid full-vh">
  <div class="container-fluid full-vh">
    <div class="row d-flex justify-content-center align-items-center full-vh">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <!-- Image placeholder -->
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="d-flex flex-column justify-content-center align-items-center">   
          <h3 class="fw-bold">Forgot Password ?</h3>
          <p>Enter your email to reset your password.</p>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-outline mb-4">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg",
              placeholder: "Enter a valid email address" %>
          </div>
          <div class="action">
            <%= f.submit "Reset password", class: "btn btn-primary btn-lg w-100" %>
          </div>
          <div class="d-flex justify-content-between align-items-center mt-4">
            <p class="fw-bold mb-0 mt-3">
              Already a member?
              <%= link_to "Sign In", new_session_path(resource_name), class:"link-primary text-decoration-none register-hover link" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
