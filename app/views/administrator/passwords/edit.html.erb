<div id="authentication-administrator">
  <div class="container-fluid full-vh">
    <%= render "administrator/shared/error_messages", resource: resource %>
    <div class="row d-flex justify-content-center align-items-center full-vh">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Clinic sign-in">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <div class="d-flex flex-column justify-content-center align-items-center mb-4">   
          <h3 class="fw-bold">Change Password</h3>
        </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example4">Password</label>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>
          <div class="form-outline mb-3">
            <label class="form-label" for="form3Example5">Confirm Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
          </div>
          <div class="text-center text-lg-start">
            <%= f.submit "Change my password" , class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
