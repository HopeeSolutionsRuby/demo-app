<!-- Delete Modal -->
<div class="modal fade" id="deleteClinicModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete clinic</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <span>
          <%= "Are you sure you want to delete clinic #{clinic.name}?" %>
        </span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary"  data-bs-dismiss="modal">Close</button>
        <%= button_to "Delete customer" , administrator_clinic_path(clinic), method: :delete, class: "btn btn-danger", data: { turbo: false} %>
      </div>
    </div>
  </div>
</div>