<div class="container-fluid rounded mt-5" data-controller="clinic">
  <div class="row">
    <div class="col-md-12">
      <div class="p-3 py-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= link_to administrator_doctors_path, class: 'd-flex flex-row align-items-center back unstyled-link' do %>
            <i class="fa fa-long-arrow-left mb-2 mx-2"></i>
            <h6>Back to home</h6>
          <% end %>
          <h6 class="text-right">New Profile</h6>
        </div>
        <%= form_with(model: @doctor, url: administrator_doctors_path, class: 'needs-validation', novalidate: true, multipart: true) do |form| %>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= form.label :full_name, 'Full name' , class: 'form-label text-back' %>
              <%= form.text_field :full_name, class: 'form-control', required: true %>
            </div>
            <div class="col-md-6">
              <%= form.label :age, 'Age' , class: 'form-label text-back' %>
              <%= form.number_field :age, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-6">
              <%= form.label :email, 'Email' , class: 'form-label text-back' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>
            <div class="col-md-6">
              <%= form.label :gender, 'Gender' , class: 'form-label text-back' %>
              <%= form.select :gender, [['Male', 'male'], ['Female', 'female'], ['Other', 'other']], {}, class: "form-select" %>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-6">
              <%= form.label :address, 'Address' , class: 'form-label text-back' %>
              <%= form.text_field :address, class: 'form-control', required: true %>
            </div>
            <div class="col-md-6">
              <%= form.label :phone_number, 'Phone number' , class: 'form-label text-back' %>
              <%= form.text_field :phone_number, class: 'form-control', data: { controller: 'phone-mask' }, required: true %>
            </div>
          </div>
          <div class="form-actions mt-3" style="text-align:right">
            <%= form.submit 'Save' , class: 'btn btn-primary', id: 'submitButton', data: { turbo: false } %>
            <%= link_to 'Cancel' , administrator_doctors_path, class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
