<%= render "administrator/shared/notice_messages" %>
<div id="table-admin">
  <div class="container">
    <div class="row align-items-center justify-content-between"></div>
    <div class="row">
      <div class="col-12 col-lg-8">
        <div class="card">
          <div class="card-body">
            <div class="border-bottom pb-4">
              <div class="row align-items-center text-center text-sm-start">
                <div class="col-12 col-sm-auto">
                    <%= image_tag "avatar_#{rand(1..2)}.png", class: 'rounded-circle avatar-show' %>
                </div>
                <div class="col-12 col-sm-auto flex-grow-1">
                  <h4><%= @customer.full_name %></h3>
                  <p>Joined <%= calculate_days_ago(@customer.created_at) %></p>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-center pt-4"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-lg-4">
        <div class="card"></div>
      </div>
    </div>
  </div>
</div>