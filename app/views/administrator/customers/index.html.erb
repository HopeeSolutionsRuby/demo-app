<div id="table-admin">
  <section class="container" style="height: 86vh; padding-top: 24px;">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Avatar</th>
          <th>Full name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Gender</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>              
              <%= image_tag "avatar_#{rand(1..2)}.png", class: "rounded-circle avatar" %>
            </td>
            <td>
              <%= link_to administrator_customer_path(customer), class: 'text-decoration-none' do %>
                <span class="fw-bold"><%= customer[:full_name] %></span>
              <% end %>            
            </td>
            <td>
              <span class="fw-normal"><%= customer[:email] %></span>
            </td>
            <td>
              <span class="fw-normal"><%= customer[:age] %></span>
            </td>
            <td>
              <span class="fw-normal"><%= customer[:gender].capitalize %></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
