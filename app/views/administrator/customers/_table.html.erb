<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th style="width: 100px; max-width: 200px; overflow: hidden;">Name</th>
      <th style="width: 150px; max-width: 150px; overflow: hidden;">Email</th>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Age</th>
      <th style="width: 200px; max-width: 200px; overflow: hidden;">Address</th>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Tags</th>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr id="<%= customer[:id] %>">
        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;"><%= customer[:full_name] %></td>
        <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;"><%= customer[:email] %></td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;"><%= customer[:age] %></td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;"><%= customer[:address] %></td>
        <td style="max-width: calc(100% - 600px); overflow: hidden; text-overflow: ellipsis;">
          <%= link_to "View", administrator_customer_path(customer.id), class: "btn btn-primary", role: "button", data: { turbo_frame: "_top" } %>
        </td>
        <td style="width: 75px;">
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= customer.id %>">
            Delete
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='d-flex align-items-right justify-content-end'>
  <%== pagy_bootstrap_nav(pagy) %>
</div>
