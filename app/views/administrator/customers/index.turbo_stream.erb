<%= turbo_stream.append :customers do %>
    <% @customers.each do |user| %>
      <div style='border: 2px solid;'>
        <%= render customer %>
        <p>
          <%= link_to "Show this user", customer %>
        </p>
      </div>
      <br>
    <% end %>
<% end %>
<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
    <%= turbo_frame_tag :pagination, loading: :lazy,
                        src: users_path(format: :turbo_stream, page: @pagy.next, q: @query) %>
  <% end %>
<% end %>
