<div id="table-admin">
  <div class="container mt-3">
    <h3>Editing tag</h1>
    <%= form_with(model: tag, url: administrator_tag_path(tag), local: true) do |form| %>
      <div class="row g-3 mb-3">
        <div class="col-12 col-lg-6">
          <%= form.label :name, class: "form-label text-capitalize fw-bold mb-1 edit-fs-15" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
      </div>
      <div class="text-start">
        <%= form.submit "Save changes", class: "btn btn-primary px-5" %>
      </div>
    <% end %>
  </div>
</div>
