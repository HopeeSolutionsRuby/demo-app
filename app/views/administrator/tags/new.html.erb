<div id="table-admin" class="pt-4">
  <div style="margin: 0 20px;">
    <%= form_with(model: @tag, url: administrator_tags_path) do |form| %>
      <div class="card">
        <div class="card-body px-4">
          <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 20px; margin-top: 15px;">
            <div class="back-home">
              <%= link_to administrator_tags_path, class: "list-unstyled", style: "color: black; text-decoration: none;" do %>
                <i class="fa fa-long-arrow-left mb-2 mx-2"></i>
                Back home
              <% end %>
            </div>
            <div>
              New customer
            </div>
          </div>
          <div class="row g-3 mb-3">
            <div class="col-12">
              <%= form.label :name, class: "form-label text-capitalize mb-1 edit-fs-15" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Name", required: true %>
            </div>
            <div class="text-md-end text-center">
              <%= form.submit "Save changes", class: "btn btn-primary px-5" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
