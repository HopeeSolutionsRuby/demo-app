<div id="table-admin">
  <div id="table-admin" class="pt-4">
    <div style="margin: 0 20px;">
      <div class="back-home mb-4 mt-3">
      <%= link_to administrator_tags_path, class: "list-unstyled", style: "color: black; text-decoration: none;" do %>
        <i class="fa fa-long-arrow-left mb-2 mx-1"></i>
        Back home
      <% end %>
    </div>
      <div class="row align-items-center justify-content-between mb-4">
        <div class="col-auto">
          <p class="m-0" style="font-size: 25px; font-weight: 600;">Tagging</p>
        </div>
        <div class="col-auto">
          <div class="row g-2 g-sm-3">
            <div class="col-auto">
              <%= button_to administrator_tag_path(tag), method: :delete, class: "btn btn-danger" do %>
                <i class="fa-solid fa-trash m-1"></i> 
                Delete tag
              <% end %>
            </div>
            <div class="col-auto">
              <%= button_to edit_administrator_tag_path(tag), method: :get, class: "btn btn-warning edit-fs-15" do %>
                <i class="fa-solid fa-pen-to-square m-1"></i> Edit tag
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <div class="row d-flex justify-content-between align-items-center mb-2">
                <div class="col-auto">
                  <p class="m-0" style="font-size: 18px; font-weight: 600;">Name tag</p>
                </div>
                <div class="col-auto">
                  <p class="m-0" style="font-size: 18px;"><%= tag.name %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
