<div id="table-admin">
  <div class="container mt-3">
    <div class="row align-items-center justify-content-between mb-4">
      <div class="col-auto">
        <h2 class="mb-0 fs-3">Tagging</h2>
      </div>
      <div class="col-auto">
        <div class="row g-2 g-sm-3">
          <div class="col-auto">
            <%= button_to administrator_tag_path(tag), method: :delete, class: "btn btn-danger" do %>
              <i class="fa-solid fa-trash m-1"></i> 
              Delete tag
            <% end %>
          </div>
          <div class="col-auto">
            <%= button_to edit_administrator_tag_path(tag), method: :get, class: "btn btn-warning edit-fs-15" do %>
              <i class="fa-solid fa-pen-to-square m-1"></i> Edit tag
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="row d-flex justify-content-between align-items-center mb-2">
              <div class="col-auto">
                <h5 class="mb-0">Name tag</h5>
              </div>
              <div class="col-auto">
                <h5 class="fw-normal"><%= tag.name %></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
