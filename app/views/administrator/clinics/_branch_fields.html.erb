<div class="nested-fields my-3 bg-white border-10 px-3 py-3">
  <h5 class="text-right float-end" style="font-weight: 700;">Clinic branches</h5>
  <%= f.label :name, class: "mt-3 bold" %>
  <%= f.text_field  :name, placeholder: "Enter your branch name", class: "mb-3 form-control" %>
  <%= f.label :address, class: "mt-3 bold" %>
  <%= f.text_area :address, placeholder: "Enter your branch address", class: "mb-3 form-control" %>
  <%= f.label :ward, class: "mt-3 bold" %>
  <%= f.text_area :ward, placeholder: "Enter your branch ward", class: "mb-3 form-control" %>
  <%= f.label :district, class: "mt-3 bold" %>
  <%= f.text_area :district, placeholder: "Enter your branch district", class: "mb-3 form-control" %>
    <%= f.label :city, class: "mt-3 bold" %>
  <%= f.text_area :city, placeholder: "Enter your branch city", class: "mb-3 form-control" %>
  <%= link_to_remove_association "Delete", f,class:"btn btn-danger" %>
</div>