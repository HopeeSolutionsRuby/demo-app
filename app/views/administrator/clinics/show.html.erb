<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <%= link_to 'Home', administrator_dashboard_index_path,class:"breadcrumb-item" %>
    <%= link_to 'Clinics', administrator_clinics_path,class:"breadcrumb-item" %>
    <li class="breadcrumb-item active" aria-current="page">Show</li>
  </ol>
</nav>
<div class="container-fluid rounded p-4 space">
  <div class="d-flex justify-content-between ">
    <h2>Clinic Details</h2>
    <br>
    <%= link_to edit_administrator_clinic_path(@clinic.id), class: "btn border hover" , role: "button" , data: {
      turbo_frame: "_top" } do %>
      <h6 class="text-right mt-1 fw">Edit Profile</h6>
      <% end %>
  </div>
</div>
<div class="row my-3">
   <div class="col-md-4  border-right">
      <div class="row image-contain bg-white">
        <% if @clinic.pictures.present? %>
          <% @clinic.pictures.each do |image| %>
            <div class="col-md-6 my-3">
              <%= image_tag image.url, class: 'img-fluid rounded mb-2 img-clinic'  %>
            </div>
            <% end %>
              <% else %>
                <div class="col-md-12 d-flex justify-content-center align-items-center  ">
                  <%= image_tag 'noimage' , class: 'img-fluid rounded px-3 mx-5 my-3 img-clinic' ,
                    style: 'max-height: 290px; max-width: 290px' %>
                </div>
                <% end %>
      </div>
    </div>
  <div class="col-md-7">
    <div class="p-3 py-3 bg-white border-10">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <%= link_to administrator_clinics_path, class: 'd-flex flex-row align-items-center back unstyled-link' do %>
          <i class="fa fa-long-arrow-left mb-2 mx-2"></i>
          <h6 class="text-back">Back to home</h6>
        <% end %>
        <h5 class="text-right" style="font-weight: 700;">Clinic infomation</h5>
      </div>
      <div class="row mt-2">
        <div class="col-md-6 ">
          <strong class='form-label'>Name</strong>
          <p>
            <%= @clinic.name %>
          </p>
        </div>
        <div class="col-md-6">
          <strong class='form-label'>Service information</strong>
          <p>
            <%= @clinic.service_information %>
          </p>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-6">
          <strong class='form-label'>Insurance infomation</strong>
          <p>
            <%= @clinic.insurance_infomation %>
          </p>
        </div>
        <div class="col-md-6">
          <strong class='form-label'>Faculity</strong>
          <p>
            <%= @clinic.faculity %>
          </p>
        </div>
      </div>
    </div>
  <div>
      <% @clinic.branches.each do |branch| %>
        <div class="bg-white border-10 py-3 p-3 position-relative my-3 position relative">
          <h5 class="text-right float-end position-absolute end-0 mx-3" style="font-weight: 700;">Clinic branches</h5>
          <div class="row mt-2">
            <div class="col-md-6 ">
              <strong class='form-label'>Name</strong>
              <p>
                <%= branch.name %>
              </p>
            </div>
            <div class="col-md-6">
              <strong class='form-label'>Address</strong>
              <p>
                <%= branch.address %>
              </p>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <strong class='form-label'>Ward</strong>
              <p>
                <%= branch.ward %>
              </p>
            </div>
            <div class="col-md-6">
              <strong class='form-label'>District</strong>
              <p>
                <%= branch.district %>
              </p>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <strong class='form-label'>City</strong>
              <p>
                <%= branch.city %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
</div>
</div>
