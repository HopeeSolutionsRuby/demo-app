<div class="container-fluid rounded p-4 space">
    <div class="d-flex justify-content-between ">
      <h2>Clinic Details</h2>
      <div>
        <%= link_to edit_administrator_clinic_path(@clinic.id), class: "btn border hover", role: "button", data: { turbo_frame: "_top" } do %>
          <h6 class="text-right mt-1 fw">Edit Profile</h6>
        <% end %>
      </div>
    </div>
  <div class="row my-3">
    <div class="col-md-4 image-contain bg-white py-2">
      <div class="row mt-2">
        <% if @clinic.pictures.present? %>
          <% @clinic.pictures.each do |image| %>
            <div class="col-md-6 my-3">
              <%= image_tag image.url, class: 'img-fluid rounded mb-2 img-clinic'%>
            </div>
          <% end %>
        <% else %>
          <div class="col-md-12 d-flex justify-content-center align-items-center  ">
            <%= image_tag 'noimage', class: 'img-fluid rounded px-3 mx-5 my-3', style: 'max-height: 290px; max-width: 290px' %>
          </div>
        <% end %>
      </div>      
    </div>
    <div class="col-md-8">
      <div class="p-3 py-5 bg-white border-10">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= link_to administrator_clinics_path, class: 'd-flex flex-row align-items-center back unstyled-link' do %>
            <i class="fa fa-long-arrow-left mb-2 mx-2"></i>
            <h6 class="text-back">Back to home</h6>
          <% end %>
        </div>
        <div class="row mt-2">
          <div class="col-md-6 ">
            <strong class='form-label'>Name</strong>
            <p><%= @clinic.name %></p>
          </div>
          <div class="col-md-6">
            <strong class='form-label'>Address</strong>
            <p><%= @clinic.address %></p>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-md-6">
            <strong class='form-label'>Region</strong>
            <p><%= @clinic.region %></p>
          </div>
          <div class="col-md-6">
            <strong class='form-label'>Faculity</strong>
            <p><%= @clinic.faculity %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
