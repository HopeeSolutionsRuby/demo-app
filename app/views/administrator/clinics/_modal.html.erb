<div class="modal fade" id="editModal<%=clinic.id%>" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Upload Picture</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div data-controller="dropzone" data-dropzone-target="previewContainer" class="preview-container mt-3 border p-3">
        <div class="input-group">
          <%= form.file_field :pictures, id: "clinic_pictures", multiple: true, class: "form-control", "data-dropzone-target": "input" %>
        </div>
        <label for="clinic_pictures" class="form-label mt-2">
          Drag and drop files here or click to upload
        </label>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <div class="form-actions" style="text-align:right">
          <%= form.submit 'Save' , class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>