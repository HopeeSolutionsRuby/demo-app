<div class="me-auto p-2 bd-highlight" data-controller="clinic">
  <div class="row align-items-start">
    <%= search_form_for @q, url: administrator_clinics_path, html: { method: :get }, class:'col-auto', remote:true, format:'pdf',id: 'search-form', data: { turbo_frame: 'search'} do |f| %>
      <%= f.search_field :name_or_address_or_faculity_or_region_cont, style:"width:400px;height:35px", class:'search-field' %>
      <%= f.button class: 'btn btn-outline-dark', style:'height:35px;margin-bottom:3px',type: 'submit' do %>
      <i class="fa-solid fa-magnifying-glass"></i>
      <% end %>
    <% end %> 
  
    <div class="col-auto">
      <input type="checkbox" class="btn-check" id="btn-check-name" name="options" autocomplete="off">
      <label class="btn btn-outline-primary" for="btn-check-name">Name</label><br>
    </div>
    
    <div class="col-auto">
      <input type="checkbox" class="btn-check" id="btn-check-address" name="options" autocomplete="off">
      <label class="btn btn-outline-primary" for="btn-check-address">Address</label><br>
    </div>  
    
    <div class="col-auto">
      <input type="checkbox" class="btn-check" id="btn-check-region" name="options" autocomplete="off">
      <label class="btn btn-outline-primary" for="btn-check-region">Region</label><br>
    </div>  
    
    <div class="col-auto">
      <input type="checkbox" class="btn-check" id="btn-check-faculity" name="options" autocomplete="off">
      <label class="btn btn-outline-primary" for="btn-check-faculity">Faculity</label><br>
    </div>

    <div class="col-auto ms-auto">
      <%= link_to 'clinics/new', class: 'btn btn-success' do %>
        + Create new clinic
      <% end %>
    </div>
    <div class="col-auto ms-auto">
      <button type="button" class="btn btn-primary btn-del-cus" data-bs-toggle="modal"
        data-bs-target="#importClinicModal">
        <i class="fa-solid fa-file-import px-1"></i>
        Import CSV
      </button>
    </div>
    <div class="col-auto ms-auto">
      <button type="button" onclick="window.location.href='<%= administrator_clinic_exports_path(format: :csv) %>'" class="btn btn-primary btn-del-cus">
        <i class="fa-solid fa-file-export px-1"></i>
        Export CSV
      </button>
    </div>

  </div>
</div>

<%= turbo_frame_tag "search" do %>
  <div id="clinic-table-container">
    <%= render partial: 'administrator/clinics/table', locals: { clinics: @paginated_clinics, pagy: @pagy } %>
  </div>
<% end %>
<%= render partial: "administrator/modal/admin_modal_clinic_import"  %>
