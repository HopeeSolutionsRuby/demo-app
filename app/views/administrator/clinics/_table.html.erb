<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Id</th>
      <th style="width: 200px; max-width: 200px; overflow: hidden;">Name</th>
      <th style="width: 150px; max-width: 150px; overflow: hidden;">Address</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Region</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Faculity</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Action</th>
      <!--<th style="width: 50px; max-width: 50px; overflow: hidden;">Delete</th>-->
    </tr>
  </thead>
  <tbody>
    <% clinics.each do |clinic| %>
      <tr id="<%= clinic[:id] %>">
        <td style="max-width: 50px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:id] %>
        </td>
        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:name] %>
        </td>
        <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:address] %>
        </td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:region] %>
        </td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:faculity] %>
        </td>
        <td style="max-width: calc(100% - 600px); overflow: hidden; text-overflow: ellipsis;">
          <%= link_to "View" , administrator_clinic_path(clinic.id), class: "btn btn-primary d-block" , role: "button" ,
            data: { turbo_frame: "_top" } %>
        </td>
        <td style="width: 75px;">
          <%= button_to "Delete" , administrator_clinic_path(clinic.id),class: "btn btn-danger d-block w-100" , data: {
            turbo_confirm: "Are you sure delete?" }, method: :delete %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(pagy) %>