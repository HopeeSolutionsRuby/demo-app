<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Id</th>
      <th style="width: 200px; max-width: 200px; overflow: hidden;">Name</th>
      <th style="width: 150px; max-width: 150px; overflow: hidden;">Address</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Region</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Faculity</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;padding-left:65px">Action</th>
    </tr>
  </thead>
  <tbody>
    <% clinics.each do |clinic| %>
      <%= render partial: "administrator/modal/admin_modal_clinic" , locals: { clinic: clinic } %>

      <tr id="<%= clinic[:id] %>">
        <td style="max-width: 50px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:id] %>
        </td>
        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:name] %>
        </td>
        <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:address] %>
        </td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:region] %>
        </td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;">
          <%= clinic[:faculity] %>
        </td>
        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;">
          <div class="row">
            <div class="col-6" style="width:100px">
              <%= link_to "View" , administrator_clinic_path(clinic.id), class: "btn btn-primary d-block" ,
                style: 'width:75px' ,role: "button" , data: { turbo_frame: "_top" } %>
            </div>
            <div class="col-6" style="width: 100px;">
              <button type="button" class="btn btn-danger btn-del-cus" data-bs-toggle="modal"
                data-bs-target="#deleteClinicModal">
                Delete
              </button>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-auto ms-auto">
    <%== pagy_bootstrap_nav(pagy) %>
  </div>
</div>
