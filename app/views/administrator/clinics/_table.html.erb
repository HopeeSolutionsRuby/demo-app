<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Id</th>
      <th style="width: 200px; max-width: 200px; overflow: hidden;">Name</th>
      <th style="width: 150px; max-width: 150px; overflow: hidden;">Address</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Region</th>
      <th style="width: 100px; max-width: 100px; overflow: hidden;">Faculity</th>
      <th style="width: 50px; max-width: 50px; overflow: hidden;">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% clinics.each do |clinic| %>
      <tr id="<%= clinic[:id] %>">
        <td style="max-width: 50px; overflow: hidden; text-overflow: ellipsis;"><%= clinic[:id] %></td>
        <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis;"><%= clinic[:name] %></td>
        <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis;"><%= clinic[:address] %></td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;"><%= clinic[:region] %></td>
        <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;"><%= clinic[:faculity] %></td>
        <td style="max-width: 50px; overflow: hidden; text-overflow: ellipsis;">
          <%= link_to "Edit", edit_administrator_clinic_path(clinic.id), class: "btn btn-primary", role: "button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(pagy) %>