<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <%= link_to 'Home', administrator_dashboard_index_path,class:"breadcrumb-item" %>
    <%= link_to 'Clinics', administrator_clinics_path,class:"breadcrumb-item" %>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>
<div class="container-fluid rounded p-4 h-100 space" ,data-controller="dropzone">
  <div class="col-md-6 d-flex">
    <h2>Clinic Details</h2>
  </div>
  <div class="row my-3">
    <div class="col-md-4  border-right">
      <div class="row image-contain bg-white">
        <% if @clinic.pictures.present? %>
          <% @clinic.pictures.each do |image| %>
            <div class="col-md-6 my-3">
              <%= image_tag image.url, class: 'img-fluid rounded mb-2 img-clinic' %>
            </div>
            <% end %>
              <% else %>
                <div class="col-md-12 d-flex justify-content-center align-items-center  ">
                  <%= image_tag 'noimage' , class: 'img-fluid rounded px-3 mx-5 my-3 img-clinic' ,
                    style: 'max-height: 290px; max-width: 290px' %>
                </div>
                <% end %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="p-3 py-5 bg-white border-10">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= link_to administrator_clinics_path, class: 'd-flex flex-row align-items-center back unstyled-link' do %>
            <i class="fa fa-long-arrow-left mb-2 mx-2"></i>
            <h6 style="font-weight: 600;">Back to home</h6>
            <% end %>
              <h5 class="text-right" style="font-weight: 700;">Clinic profile</h5>
        </div>
        <%= form_with(model: @clinic, url: administrator_clinic_path(@clinic), class: 'needs-validation' , novalidate:
          true, local: true, html: {multipart: true}) do |form| %>
          <div class="row mt-2">
            <div class="col-md-6">
              <%= form.label :name, 'Name' , class:'form-label bold' %>
                <%= form.text_field :name, class: 'form-control' , required: true %>
            </div>

            <div class="col-md-6">
              <%= form.label :service_information, 'Service infomation' , class:'form-label bold' %>
                <%= form.text_field :service_information, class: 'form-control' , required: true %>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-md-6">
              <%= form.label :insurance_infomation, 'Insurance infomation' , class:'form-label bold' %>
                <%= form.text_field :insurance_infomation, class: 'form-control' , required: true %>
            </div>

            <div class="col-md-6">
              <%= form.label :faculity, 'Faculity' , class:'form-label bold' %>
                <%= form.text_field :faculity, class: 'form-control' , required: true %>
            </div>
            <label class="pt-3">
              <%= form.check_box :remove_pictures %>
                Remove pictures
            </label>
          </div>
          <div class="branches branch-edit">
            <%= form.fields_for :branches do |branch| %>
              <%= render 'branch_fields' , f: branch %>
            <% end %>
          </div>
      </div>
        <%= render 'administrator/clinics/modal' ,clinic: @clinic, form: form %>
          <div class="form-actions mt-2" style="text-align:right">
            <%= link_to_add_association "Add branch" , form, :branches, data: {association_insertion_node: '.branches' ,
        association_insertion_method: :append}, class:"btn btn-success" %>
            <button type="button" class="btn btn-success" data-bs-toggle="modal"
              data-bs-target="#editModal<%=@clinic.id%>">
              Add pictures
            </button>
            <%= form.submit 'Save' , class: 'btn btn-primary' ,id:"submitButton", data: {turbo: false} %>
            <%= link_to 'Cancel' , administrator_clinics_path, class:"btn btn-secondary" %>
          </div>
          <% end %>
    </div>
  </div>
</div>
</div>
