<!DOCTYPE html>
<html>
  <head>
    <title>Clinic Hopee</title>
    <%= favicon_link_tag asset_path('clinic') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!-- Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

    <%= stylesheet_link_tag do %>
      "administrator/authentication",
      "administrator/forgot_password",
      "administrator/header",
      "administrator/sidebar",
      "administrator/table_admin"
    <% end %>

    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div id="authentication-administrator">
      <%= render "administrator/shared/notice_messages" %>
    </div>
    <div class="admin-layout" id="admin-pages">
      <%= render 'shared/administrator/header' %>
      <div class="container-fluid">
          <div class="row flex-nowrap">
            <%= render 'shared/administrator/sidebar' %>
            <div class="px-0 body-content">
              <div class="content-controller" style="background-color: #F5F7FA;">
                <%= yield %>
              </div>
              <%= render 'shared/administrator/footer' %>
            </div>
          </div>
        </div>
    </div>
  </body>
</html>
